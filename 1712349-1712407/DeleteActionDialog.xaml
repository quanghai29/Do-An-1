<Window x:Class="_1712349_1712407.DeleteActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1712349_1712407"
        mc:Ignorable="d"
        Title="DeleteActionDialog" Height="120" Width="400">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Delete this action. Are you sure?" FontSize="16" VerticalAlignment="Center" Margin="10,34,0,33" Width="232"/>
        <Button  Margin="30,20,0,20" Height="30" Padding="2,0,0,0" x:Name="yesButton" Click="YesButton_Click"
             BorderBrush="Transparent" Cursor="Hand" BorderThickness="1" Background="#f7f7f7" >
            <Button.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="1"/>
            </Button.Effect>
            <TextBlock Text="yes" Padding="5" FontSize="16"/>
        </Button>
        <Button  Margin="30,20,0,20" Height="30" Padding="2,0,0,0"
             BorderBrush="Transparent" Cursor="Hand" BorderThickness="1" Background="#f7f7f7" IsCancel="True">
            <Button.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="1"/>
            </Button.Effect>
            <TextBlock Text="No" Padding="5" FontSize="16"/>
        </Button>
    </StackPanel>
</Window>
